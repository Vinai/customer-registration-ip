<config>
	<modules>
		<Netzarbeiter_CustomerRegIp>
			<version>0.1.0</version>
		</Netzarbeiter_CustomerRegIp>
	</modules>
	<global>
		<models>
			<customerregip>
				<class>Netzarbeiter_CustomerRegIp_Model</class>
			</customerregip>
		</models>
		<blocks>
			<customerregip>
				<class>Netzarbeiter_CustomerRegIp_Block</class>
			</customerregip>
		</blocks>
		<resources>
			<customerregip_setup>
				<setup>
					<module>Netzarbeiter_CustomerRegIp</module>
					<class>Mage_Eav_Model_Entity_Setup</class>
				</setup>
			</customerregip_setup>
		</resources>
	</global>
	<adminhtml>
		<layout>
			<updates>
				<customerregip>
					<file>netzarbeiter/customerregip.xml</file>
				</customerregip>
			</updates>
		</layout>
		<translate>
			<modules>
				<Netzarbeiter_CustomerRegIp>
					<files>
						<default>Netzarbeiter_CustomerRegIp.csv</default>
					</files>
				</Netzarbeiter_CustomerRegIp>
			</modules>
		</translate>
	</adminhtml>
</config>